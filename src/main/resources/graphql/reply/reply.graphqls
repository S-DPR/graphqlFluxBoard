extend type Query {
    replies: [Reply]
    reply(replyId: ID!): Reply
}

extend type Mutation {
    createReply(saveReplyInput: SaveReplyInput!): Reply
    deleteReply(deleteReplyInput: DeleteReplyInput!): Boolean
}

type Reply {
    id: ID!
    commentId: ID!
    user: User
    content: String
    createdAt: String
}

input SaveReplyInput {
    commentId: ID!
    userId: ID!
    password: String
    content: String
}

input DeleteReplyInput {
    replyId: ID!
    password: String!
}
