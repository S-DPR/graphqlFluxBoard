type Query {
    posts: [Post]
    post(id: String!): Post
}

type Mutation {
    createPost(postInput: PostInput!): Post
    deletePost(id: String!): Boolean
}

type Post {
    id: String
    title: String
    content: String
    createdAt: String
}

input PostInput {
    title: String
    content: String
}
